<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_gesto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.climper.docenciaapp.ui.view.activity.GestoActivity">

    <include layout="@layout/content_gesto"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_gesto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_principal"
        app:menu="@menu/menu_gesto"/>

</android.support.v4.widget.DrawerLayout>
